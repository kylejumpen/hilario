<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.text.Font?>

<VBox fx:id="AddStock" maxHeight="350.0" maxWidth="300.0" minHeight="350.0" minWidth="300.0" prefHeight="350.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.kaf.app.controller.stock.AddStockController">
   <children>
      <StackPane prefHeight="50.0" prefWidth="200.0">
         <VBox.margin>
            <Insets left="15.0" right="15.0" top="10.0" />
         </VBox.margin>
         <children>
            <Label alignment="CENTER" text="Fournisseur" StackPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField maxWidth="75.0" minWidth="75.0" prefWidth="75.0" StackPane.alignment="CENTER_RIGHT" />
         </children>
      </StackPane>
      <StackPane prefHeight="50.0" prefWidth="200.0">
         <VBox.margin>
            <Insets left="15.0" right="15.0" />
         </VBox.margin>
         <children>
            <Label alignment="CENTER" text="Prix d'Achat" StackPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField maxWidth="75.0" minWidth="75.0" prefWidth="75.0" StackPane.alignment="CENTER_RIGHT" />
         </children>
      </StackPane>
      <StackPane prefHeight="50.0" prefWidth="200.0">
         <VBox.margin>
            <Insets left="15.0" right="15.0" />
         </VBox.margin>
         <children>
            <Label alignment="CENTER" text="Type" StackPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <fx:define>
            	<ToggleGroup fx:id="typeStockRadio" />
            </fx:define>
            <RadioButton mnemonicParsing="false" toggleGroup="$typeStockRadio" text="En gros" selected="true" StackPane.alignment="CENTER" />
            <RadioButton mnemonicParsing="false" toggleGroup="$typeStockRadio" text="à l'Unité" StackPane.alignment="CENTER_RIGHT" />
         </children>
      </StackPane>
      <StackPane prefHeight="50.0" prefWidth="200.0">
         <VBox.margin>
            <Insets left="15.0" right="15.0" />
         </VBox.margin>
         <children>
            <Label alignment="CENTER" text="Référence" StackPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField maxWidth="75.0" minWidth="75.0" prefWidth="75.0" StackPane.alignment="CENTER_RIGHT" />
         </children>
      </StackPane>
      <StackPane prefHeight="50.0" prefWidth="200.0">
         <VBox.margin>
            <Insets left="15.0" right="15.0" />
         </VBox.margin>
         <children>
            <Label alignment="CENTER" text="Quantité" StackPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField maxWidth="75.0" minWidth="75.0" prefWidth="75.0" StackPane.alignment="CENTER_RIGHT" />
         </children>
      </StackPane>
      <Label prefHeight="50.0" prefWidth="200.0" text="Etat">
         <font>
            <Font size="14.0" />
         </font>
         <VBox.margin>
            <Insets left="15.0" />
         </VBox.margin>
      </Label>
      <StackPane prefHeight="50.0" prefWidth="200.0">
         <VBox.margin>
            <Insets left="15.0" right="15.0" />
         </VBox.margin>
         <children>
            <Button disable="true" mnemonicParsing="false" text="Ajouter" StackPane.alignment="CENTER_RIGHT" />
            <Button mnemonicParsing="false" onAction="#goStockAction" text="Revenir au menu" StackPane.alignment="CENTER_LEFT" />
         </children>
      </StackPane>
   </children>
</VBox>
